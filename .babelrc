{
  "presets": [
    [
      "babel-preset-env",
      {
        "useBuiltIns": true,
        "targets": {
          "node": "current"
        }
      }
    ],
    "babel-preset-stage-2"
  ],
  "plugins": [
    "babel-plugin-transform-decorators-legacy",
    [
      "babel-plugin-transform-class-properties",
      {
        "loose": true
      }
    ]
  ],
  "env": {
    "test": {
      "plugins": [
        "babel-plugin-transform-es2015-modules-commonjs"
      ]
    }
  }
}
